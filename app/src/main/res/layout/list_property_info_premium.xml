<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView android:id="@+id/firstImage" android:layout_width="@dimen/portrait_first_image_width" android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
        <ImageView android:id="@+id/secondImage" android:layout_width="@dimen/portrait_first_image_width"  android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <TextView android:id="@+id/price" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="@dimen/portrait_text_size" android:layout_margin="5dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:id="@+id/bedrooms" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="@dimen/portrait_text_size" android:layout_marginLeft="5dp"/>
        <TextView android:id="@+id/bathrooms" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="@dimen/portrait_text_size" android:layout_marginLeft="5dp"/>
        <TextView android:id="@+id/carspaces" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="@dimen/portrait_text_size" android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView android:id="@+id/address" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="@dimen/portrait_text_size" android:layout_margin="5dp"/>
    <ImageView android:id="@+id/agentIcon" android:layout_width="@dimen/portrait_agent_icon_width" android:layout_height="wrap_content"
        android:layout_margin="5dp"/>

</LinearLayout>
